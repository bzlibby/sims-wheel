{
	"version": "2.0.0",
	"tasks": [
		{
      "label": "Run tests",
      "type": "shell",
      "command": "yarn nyc --reporter=text mocha --forbid-only --require esm --recursive --sort \"test/**/*.js\"",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {"cwd": "${workspaceFolder}"}
		}
	]
}